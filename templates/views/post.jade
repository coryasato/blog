extends ../layouts/default

block intro
	if data.post.image.exists
		.container: .row: .col-xs-12: .image-wrap: img(src=data.post._.image.crop(1000,450)).img-responsive.center-block


block content
	.container: .row: .col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
		//- if data.post.image.exists
		//- 	.image-wrap: img(src=data.post._.image.fit(750,450)).img-responsive.center-block
		article
			p: a(href='/blog') &larr; back to the blog
			hr
			if !data.post
				h2 Invalid Post.
			else
				header.posting-header
					h1= data.post.title
					h5 Posted 
						if data.post.publishedDate
							| on #{data.post._.publishedDate.format('MMMM Do, YYYY')} 
						if data.post.categories && data.post.categories.length
							| in 
							each cat, cat_i in data.post.categories
								a(href='/blog/' + cat.key)= cat.name
								if cat_i < data.post.categories.length - 1
									| , 
								else
									|  
						if data.post.author
							| by #{data.post.author.name.first}
				.posting
					p !{data.post.content.extended.html}

	.about-me
		.row
			.col-xs-12.text-center
				h1.bold Aspiring Fullstack Javascript Developer
				h3 Hacking 'til the guilt birds sing.
				br 
				br 
				a(href='https://twitter.com/CoryAsato', target='_blank')
					span.fa.fa-twitter.fa-3x.socials
				a(href='https://github.com/coryasato', target='_blank')
					span.fa.fa-github.fa-3x.socials
				a(href='https://www.linkedin.com/pub/cory-asato/a7/43/926', target='_blank')
					span.fa.fa-linkedin.fa-3x.socials
